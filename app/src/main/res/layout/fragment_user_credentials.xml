<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F9F29"
    android:orientation="vertical"
    tools:context=".PersonalDetailsActivity">

    <TextView
        android:id="@+id/lblCredentials"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="0"
        android:gravity="center|center_horizontal"
        android:text="Set credentials"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/txtLogin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0"
        android:background="@drawable/much_round_txt"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="login not less 2 chars"
        android:inputType="textShortMessage|textPersonName"
        android:paddingLeft="20dp"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0"
        android:background="@drawable/much_round_txt"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="password not less 4 chars"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0"
        android:background="@drawable/much_round_btn"
        android:text="Register" />

</LinearLayout>