<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/graphSettingsDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    app:cardBackgroundColor="@color/control_overlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/graphSettingsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="center|top|center_vertical"
            android:orientation="vertical"
            android:padding="20dp">

        </LinearLayout>

        <Button
            android:id="@+id/btnSelectGraphs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/much_round_btn"
            android:text="apply" />
    </LinearLayout>

</android.support.v7.widget.CardView>