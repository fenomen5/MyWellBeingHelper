<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGreen"
    android:orientation="vertical"
    tools:context=".AddBodyParamActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0"
        android:gravity="center_horizontal"
        android:text="Add body parameter"
        android:textColor="@color/cast_expanded_controller_progress_text_color"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblParamDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:width="100dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:text="Date"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtParamDate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/much_round_txt"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblParamType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:width="100dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:text="Type"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spnParamType"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/much_round_txt"
            android:popupBackground="@color/colorBackgroundGreen" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblParamValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:width="100dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:text="Value"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtParamValue"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/much_round_txt"
            android:ems="10"
            android:inputType="number|numberDecimal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:singleLine="false"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSaveParam"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0"
        android:background="@drawable/much_round_btn"
        android:text="Add parameter" />

</LinearLayout>